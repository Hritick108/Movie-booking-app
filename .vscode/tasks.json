{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Launch Full Project",
      "dependsOn": ["run-frontend", "run-backend", "run-admin"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "label": "run-frontend",
      "type": "shell",
      "command": "npm run dev",
      "options": {
        "cwd": "${workspaceFolder}/frontend"
      }
    },
    {
      "label": "run-backend",
      "type": "shell",
      "command": "npm start",
      "options": {
        "cwd": "${workspaceFolder}/backend"
      }
    },
    {
      "label": "run-admin",
      "type": "shell",
      "command": "npm run dev",
      "options": {
        "cwd": "${workspaceFolder}/admin"
      }
    },
    {
      "label": "Stop Movie Project",
      "type": "shell",
      "command": "npx kill-port 5173 5174 5000 -y",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    }
  ]
}
